@{
    ViewBag.Title = "Home Page";
}


                <div id="izq">
                    <H4 align = center>Selecciona la categoria:</H4>
                    <br/>
                    <ul>
					@foreach (var i in @ViewBag.catego) { 
                           <li><a href="#">@i.nombre</a></li>
     
                    }
                    </ul>
               	</div>				
				<div id="cuerpo">
                   
					<h1 align ="center">Publicaciones mas recientes</h1>
					<hr/>
                    @foreach (var item1 in @ViewBag.valor)
                    {
                        
                        <div id="recuadro">
                            @{
                                string x=item1.titulo;   
                             }
                            <strong>@Html.ActionLink(x,"Detalle_libro")</strong>
                            <div id="mas_info">
                            Categoria:<br/><a href="#">@item1.categoria</a><br/>
                            Me gusta:<br/> <a href="#">@item1.megusta</a>
                            </div>
						    <div id="imagen">
                                   <a href="#"><img src="@item1.portada" alt="imagen"/></a>
                             </div>
							@item1.descripcion
						
						    <div id="limpiador">
                                   
                            </div>
                        </div>
					<hr/>
        
             
                    } 
					
					<p>
						Aun no sabemos q entrara aqui, ojala sea algo novedoso
					</p>
					<div id="navabajo">
						<a href="#">Volver</a> |
						<a href="#">Portada</a> 
					</div>
				</div> 
				<div id="lateral">
					<h2 class="titlat">Buscar</h2>
						<div id="fbuscar" class="cuerpolateral">
						<form name="formulario" action="">
							<div id="campotexto"><input type="text" name="criterio" /></div>
							<div id="botonbuscar"><input type="image" src="images/go.gif" width="25" /></div>
							<div class="radio"><input type="radio" name="op" value="1" /> En la Web</div>
							<div class="radio"><input type="radio" name="op" value="2" /> En internet</div>
						</form>
						</div>
					<div id="registro" class="cuerpolateral">
                        @if(!Request.IsAuthenticated){
						    <text> @Html.ActionLink("Registrese con nosotros", "../Account/Register") y obtenga muchas ventajas.</text>
                        }
					</div> 
					<h2 class="titlat">Otras informaciones</h2>
