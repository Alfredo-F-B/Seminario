@model proyecto_seminario.Models.LogOnModel
@{
    ViewBag.Title = "Log On";
    ViewBag.conteo = 0;
}

<h2>Log On</h2>
<p>
    Please enter your user name and password. @Html.ActionLink("Register", "Register") if you don't have an account.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "No se ha podido iniciar sesion. Intente corrigiendo los siguientes errores:")

@using (Html.BeginForm())
{
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>


            @if (@ViewBag.x == 0)
            {
                <div class="editor-label">
                    @Html.LabelFor(model => model.Captcha)
                    
                    <img alt="Captcha" src="@Url.Action("CaptchaImage")" style="" />
                
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Captcha)
                    @Html.ValidationMessageFor(model => model.Captcha)
                </div>
            }
            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>
            <p>
                <input type="submit" value="Log On" />
            </p>
              
        </fieldset>
    </div>
}
